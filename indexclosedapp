<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Closed</title>
    <style>
        /* Đặt hình ảnh full màn hình */
        body, html {
            margin: 0;
            padding: 0;
            overflow: hidden; /* Ẩn cuộn */
            height: 100%;
        }
        img {
            position: absolute;
            top: 50%;
            left: 50%;
            width: 100%; /* Đặt chiều rộng 100% */
            height: auto; /* Giữ tỷ lệ khung hình */
            transform: translate(-50%, -50%);
            cursor: pointer; /* Thay đổi con trỏ khi rê chuột vào ảnh */
        }
        button {
            position: absolute;
            top: 20px; /* Vị trí của nút */
            right: 20px; /* Vị trí của nút */
            opacity: 0; /* Ẩn nút */
            transition: opacity 0.5s; /* Hiệu ứng mờ khi rê chuột */
        }
        button:hover {
            opacity: 1; /* Hiện nút khi rê chuột lên */
        }
    </style>
</head>
<body>
    <!-- Chèn ảnh từ link -->
    <img id="image" src="https://i.imgur.com/5Q0mhS8.jpeg" alt="Hình ảnh">

    <!-- Chèn âm thanh -->
    <audio id="audio" loop muted>
        <source src="horror.mp3" type="audio/mpeg">
        Trình duyệt của bạn không hỗ trợ thẻ audio.
    </audio>

    <!-- Nút để ngừng âm thanh -->
    <button id="stopBtn">Ngừng Nhạc</button>

    <script>
        // Lấy biến cho âm thanh và nút
        var audio = document.getElementById('audio');
        var stopBtn = document.getElementById('stopBtn');
        var image = document.getElementById('image');

        // Khi chạm vào ảnh, mở âm thanh
        image.onclick = function() {
            audio.muted = false; // Bỏ tắt tiếng
            audio.play(); // Phát âm thanh
        };

        // Thêm sự kiện để dừng âm thanh khi nhấn nút
        stopBtn.onclick = function() {
            audio.pause(); // Dừng âm thanh
        };
    </script>
</body>
</html>
